{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "body": {
      "type": "text",
      "required": true
    },
    "post_media": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": true
    },
    "isMediumPost": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "mediumLink": {
      "type": "string",
      "default": "https://medium.com/@mjtbkh"
    }
  }
}
